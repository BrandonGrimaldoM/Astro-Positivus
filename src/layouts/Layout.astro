---
import "@fontsource-variable/space-grotesk";
import Nav from "../components/Nav.astro";
import Footer from "../components/Footer.astro";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>Astro Positivus</title>
    <meta name="description" content="Astro Positivus" />
    <meta name="keywords" content="Astro Positivus" />
  </head>
  <body class="bg-p-white">
    <Nav />
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>

<style is:global>
  body {
    width: 100%;
    height: 100%;
    font-family: "Space Grotesk Variable", sans-serif;
  }

  h1,
  h2,
  h3,
  h4,
  p {
    color: #000;
    font-style: normal;
    font-weight: 500;
    line-height: normal;
    font-style: normal;
    font-weight: 500;
    line-height: normal;
    font-style: normal;
    font-weight: 500;
    line-height: normal;
    font-style: normal;
    font-weight: 500;
    line-height: normal;
  }

  a {
    color: #000;
	font-size: 20px;
  }

  h1 {
    font-size: 60px;
  }
  h2 {
    font-size: 40px;
  }

  h3 {
    font-size: 30px;
  }

  h4 {
    font-size: 20px;
  }

  p {
    font-size: 18px;
    font-weight: 400;
  }

  @media (max-width: 768px) {
    h1 {
      font-size: 43px;
    }
    h2 {
      font-size: 36px;
    }

    h3 {
      font-size: 26px;
    }

    h4 {
      font-size: 18px;
    }

    p {
      font-size: 16px;
      line-height: 24px;
    }
  }
</style>
